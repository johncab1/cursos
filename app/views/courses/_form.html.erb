<%= form_with model: @course do |f| %>
  <div>
    <%= f.label 'title' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label 'description' %>
    <%= f.text_area :description, placeholder: 'describe el curso' %>
  </div>
  <div>
    <%= f.label 'visible' %>
    <%= f.check_box :visible %>
  </div>
  <div>
    <%= f.label 'published' %>
    <%= f.check_box :published %>
  </div>
  <%= f.submit "#{message} Curso" %>
<% end %>